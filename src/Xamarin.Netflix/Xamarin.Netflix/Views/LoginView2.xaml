<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.Netflix.Views.LoginView2"
    xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
    xmlns:templates="clr-namespace:Xamarin.Netflix.Views.Templates"
    BackgroundColor="#181818">

    <ContentPage.Resources>

        <ResourceDictionary>

            <Style x:Key="WhoTextStyle"
                TargetType="Label">

                <Setter Property="TextColor"
                    Value="#FFFFFF" />

                <Setter Property="FontSize"
                    Value="16" />

                <Setter Property="HorizontalOptions"
                    Value="Center" />

                <Setter Property="Margin"
                    Value="0, 12" />

            </Style>

        </ResourceDictionary>

    </ContentPage.Resources>

    <ContentPage.ToolbarItems>

        <ToolbarItem Icon="edit" />

    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <Grid CompressedLayout.IsHeadless="true">

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />

                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <Label Text="WhoÂ´s Watching?"
                Style="{StaticResource WhoTextStyle}" />

            <Grid Grid.Row="1"
                Padding="48, 0"
                CompressedLayout.IsHeadless="true">

                <flv:FlowListView FlowItemsSource="{Binding Profiles}"
                    FlowItemTappedCommand="{Binding HomeCommand}"
                    BackgroundColor="#181818"
                    FlowColumnCount="2"
                    FlowColumnExpand="First"
                    SeparatorVisibility="None"
                    HasUnevenRows="True">

                    <flv:FlowListView.FlowColumnTemplate>

                        <DataTemplate>

                            <templates:ProfileItemTemplate />

                        </DataTemplate>

                    </flv:FlowListView.FlowColumnTemplate>

                </flv:FlowListView>

            </Grid>

        </Grid>

    </ContentPage.Content>

</ContentPage>